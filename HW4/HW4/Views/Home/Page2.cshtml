
@{
    ViewBag.Title = "Page2";
}

<h2>Page2</h2>

<p>Enter the username and the password to create a new account.</p>

<form method="post">
    <label for="username">Username</label>
    @*Input the Username *@
    <input type="text" name="username" value="" />
    <label for="password">Password</label>
    @*Input the Password *@
    <input type="password" name="password" maxlength="100" />
    @*Create the submit button *@
    <input type="submit" value="Create" />
</form>

@*Show the message from the HomeController *@
<p>@ViewBag.message</p>